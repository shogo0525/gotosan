<ul>
  <% answers.each do |answer| %>
    <% unless answer.id.nil? %>
      <li>
        <p class="left"><%= answer.user.name %>さんがコメントしました。</p>
        <p class="left">
          <%= simple_format(h(answer.content)) %>
        </p>

        <%if false %>
        <% if current_user.id == comment.user.id %>
          <p class="right">
            <%= link_to '編集', edit_topic_comment_path(topic, comment), class: "fa fa-pencil-square-o fa-lg" %>
            <%= link_to '削除', topic_comment_path(topic, comment), class: "fa fa-trash-o fa-lg", method: :delete, remote: true, data: { confirm: '本当に削除していいですか？' } %>
          </p>
        <% end %>
        <% end %>

      </li>
    <% end %>
  <% end %>
</ul>
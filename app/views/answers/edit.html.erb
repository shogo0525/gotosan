<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
		<h1>回答内容を編集する</h1>
		  <%= form_for(@answer, url: question_answer_path(@answer.question, @answer)) do |f| %>
		    <%= f.text_area :content, class: "form-control", placeholder: '回答を入力' %>
		    <br>
		    <%= f.submit '更新する', class: 'btn btn-sm btn-primary' %>
		  <% end %>
	</div>
</div>

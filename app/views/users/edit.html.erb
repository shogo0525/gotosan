<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h2>パスワードを変更する</h2>

    <%= form_for(@user, :url => { :action => "update_password" } ) do |f| %>

      <div class="field">
        <%= f.password_field :password, :autocomplete => "off", placeholder: "6-16文字", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, :autocomplete => "off", placeholder: "6-16文字", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "更新", class: 'btn btn-primary btn-block' %>
      </div>

    <% end %>

  </div>
</div>
